@model AdminPannel.Models.UserLogin
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>     
</head>
<body>    
   @using (Html.BeginForm())
    {         
        <div class="container">
            <h2>Login Form</h2>
            <br />
            <div class="form-group">
                <label for="email">Email:</label>
                @*<input type="text" class="form-control" id="useridd" placeholder="user name" name="username">*@
                @Html.TextBoxFor(m => m.Emailid, new { placeholder = "Email address", type = "email", @class = "form-control", required = "required" })
            </div>
            <div class="form-group">
                <label for="pwd">Password:</label>
                @*<input type="password" class="form-control" id="pwd" placeholder="Enter password" name="pswd">*@
                @Html.PasswordFor(m => m.Password, new { @id = "password", placeholder = "Create password", type = "password", @class = "form-control", required = "required" })
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" name="remember"> Remember me
                </label>
            </div>
            @*<button type="submit" class="btn btn-primary">Submit</button>*@
            <button type="submit" class="btn btn-primary">Submit</button>
            <br />
            <div class="form-group form-check">
                <label class="form-check-label">
                    Haven't an account? @Html.ActionLink("Register", "Signup", "User")
                </label>
            </div>
        </div>
    }    
</body>
</html>
